% (1) interest rates highly persistent. (2) if you subtract or
% orthogonalize with respect to pi*, less persistent, but still can't
% reject unit root. (3) if you also subtract r*, then even less
% persistent and reject unit root. (4) unit coefficients are
% fine. *OUR PREDICTIONS ARE CONFIRMED* Much better idea to model
% *interest rate cycle* as mean-reverting than to model interest rates
% as mean-reverting

\subsection{2. Forecasting interest rates with $r^\ast_t$ and $\pi^\ast_t$}

\begin{frame}
  \frametitle{2. Forecasting interest rates with $r^\ast_t$ and $\pi^\ast_t$}
  \vspace{1pc}
  Model predicts mean-reversion of $y_t^{(n)}$ to shifting
  endpoint \[\underset{h
      \rightarrow \infty}{\lim} E_t y^{(n)}_{t+h} = \text{constant} +
    \pi^\ast_t + r^\ast_t\]
  \vspace{-.5pc}
  \begin{block}{Compare three forecasts out-of-sample}
    \begin{enumerate}
    \item Random walk \[\hat{y}^{(n)}_{t+h} = y_t^{(n)}\]
    \item $i^\ast_t=\pi^\ast_t + r^\ast_t$ is shifting endpoint
      \[\hat{y}^{(n)}_{t+h} = \hat{\rho}_t^h y_t^{(n)} +
        (1-\hat{\rho}_t^h) i^\ast_t\]
    \item $\pi^\ast_t$ (plus constant) is shifting endpoint \[\hat{y}^{(n)}_{t+h} = \tilde{\rho}_t^h y_t^{(n)} +
        (1-\tilde{\rho}_t^h) (\pi^\ast_t + \hat{\mu}_t)\]
    \end{enumerate}
    Rolling estimation (expanding window) of $\hat{\rho}_t$,
    $\tilde{\rho}_t$, $\hat{\mu}_t$
  \end{block}
\end{frame}

\begin{frame}
  \frametitle{OOS forecasting for 10-year yield}
  \begin{table}
    \centering
    \begin{tabular}{lccccc}
      \toprule
      Horizon $h$ (quarters): & 4 & 10 & 20 & 30 & 40 \\
      \midrule
      \emph{RMSE}\\
      \input{../../tables/yield_forecasts_10y_rmse.tex}
      \midrule
      \emph{MAE}\\
      \input{../../tables/yield_forecasts_10y_mae.tex}
      \bottomrule
    \end{tabular}%
\begin{flushleft}
  \scriptsize \qquad First forecast in 1976:Q3 (five years of data)
\end{flushleft}
  \end{table}
\end{frame}
% didn't include stationary forecasts: they are not a la
% mode, because just like for inflation, they don't do well

% TAKE AWAYS: (1) you want to forecast interest rates with shifting
% endpoints, (2) it's NOT enough to just account for pi* in doing
% so. (3) It's simple to forecast interest rates: nowcast=current
% value. steady state=pi*+r*. then draw a smooth line. (4) Similar result
% to Faust-Wright: like for inflation, we want to make forecasts in
% gap form.

\subsection{3. Predicting bond returns with $r^\ast_t$ and $\pi^\ast_t$}

\begin{frame}
  \frametitle{3. Predicting bond returns with $r^\ast_t$ and $\pi^\ast_t$}
Excess bond returns: $rx_{t+h}^{(n)} = p_{t+h}^{(n-h)} -
p_t^{(n)} - y_t^{(h)}$
\vspace{1pc}
\begin{block}{Which variables predict excess bond returns?}
  \begin{wideitemize}
    \item Model just says that risk premia, $E_t rx_{t+h}^{(n)}$, driven by
      latent $x_t$
      \begin{itemize}
      \item What information is needed to infer $x_t$?
      \end{itemize}
    \item Macro-finance models: yield curve spans relevant information
    \item But Cieslak and Povala (2015) found that their measure of
      $\pi^\ast_t$ has strong incremental predictive power
      \begin{itemize}
      \item Detrending yields is helpful for predictions
      \end{itemize}
    \item Model: $r^\ast_t$ and $\pi^\ast_t$ play same role for nominal yields/returns
    \end{wideitemize}
  \end{block}
  Predictive regressions with PCs for yields, $\pi^\ast_t$ and
  $r^\ast_t$\\Bootstrap of Bauer-Hamilton (2017) to test spanning hypothesis
\end{frame}
% expected excess bond returns are central object of interest because
% they measure bond risk premia. KEY PREDICTION: if pi* is important
% to gauge bond risk premia, then r* should as well

\begin{frame}
  \frametitle{Predictive regressions. Full sample: 1971--2015}
