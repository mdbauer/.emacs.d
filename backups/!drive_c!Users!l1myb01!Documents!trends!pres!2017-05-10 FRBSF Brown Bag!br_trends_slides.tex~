\end{frame}

\section{Evidence}

\subsection{1. Persistence in long-term yields from $r^\ast_t$ and
  $\pi^\ast_t$}

\begin{frame}
  \frametitle{1. Persistence in long-term yields from $r^\ast_t$ and
    $\pi^\ast_t$}
  \begin{block}{Model predictions}
  \begin{wideitemize}
  \item Detrended interest rates $y_t^{(n)} - \pi^\ast_t - r^\ast_t$ are cyclical/stationary/\\mean-reverting, and much less persistent than $y^{(n)}_t$
  \item Difference more pronounced for long-term yields
  \item Cointegration vector for $(y^{(n)}_t, \pi^\ast_t, r^\ast_t)$ is $(1, -1, -1)$
  \item Persistence of $y_t^{(n)} - \pi^\ast_t$ shows importance of $r^\ast_t$
    \vspace{1pc}
  \item \emph{Long-run Fisher effect}\\
    Common stochastic trend in inflation and interest rates
  \end{wideitemize}
  \end{block}
\end{frame}

