%     \item Substantial gains for long-horizon interest rate forecasts (vs.~random walk) by using

%     \item Accounting for trend components is crucial for predicting
%       excess returns/estimating bond risk premia
%     % \item<3-> Changes in macro trends account for substantial
%     %   share of the variance of low-frequency changes in interest rates
%     \end{wideitemize}
%     \ldots if we account for \emph{both} trend components of interest
%     rates.\\\ Changes in equilibrium real rate matter a lot.
% \end{frame}

\begin{frame}
  \frametitle{Why do we care?}
  \begin{wideitemize}
  \item Understanding historical evolution of interest rates
    \begin{itemize}
    \item What caused the secular decline since the 1980s? Why did
      it continue once inflation expectations were anchored?
    \end{itemize}
  \item Estimation of expectations and risk premia
    \begin{itemize}
    \item Expected path of policy rates, movements in risk premia, transmission of monetary policy
    \end{itemize}
  \item Forecasting
    \begin{itemize}
    \item Portfolio management, interest rate risk, valuation
    \end{itemize}
  \item Building macro-finance models
    \begin{itemize}
    \item Asset pricing, term structure, structural drivers of risk premia
    \end{itemize}
  \end{wideitemize}
\end{frame}

\begin{frame}
  \frametitle{Literature}
  \begin{block}{Trend in inflation}
    Kozicki and Tinsley (2001), Stock and Watson (2009), Faus and Wright (2013), Clark and Doh (2014)
  \end{block}
  \begin{block}{Persistence of real rate, long-run Fisher effect}
    Rose (1988), Mishkin (1992), Wallace and Warner (1993), Evans and Lewis (1995), Neely and Rapach (2008)
  \end{block}
  \begin{block}{Natural rate/equilibrium real rate -- $r^\ast_t$}
    Laubach and Williams (2003), Kiley (2015), Rachel and Smith
    (2015), Hamilton et al.~(2016), Johannsen and Mertense (2016),
    Christensen and Rudebusch (2017), Holston et al.~(2017)
  \end{block}
  \begin{block}{Macro-finance term structure models}
    H\"{o}rdal et al.~(2006), Rudebusch and Wu (2008), Bekaert et al.~(2010), Joslin et al.~(2014), Cieslak and Povala (2015)
  \end{block}
  \begin{block}{Interest-rate forecasting}
    Diebold and Li (2006), CDR (2011), Dijk et al.~(2014)
   \end{block}
\end{frame}
