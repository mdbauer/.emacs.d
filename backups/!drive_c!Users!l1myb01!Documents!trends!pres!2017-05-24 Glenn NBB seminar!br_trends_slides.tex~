      \toprule
      &\multicolumn{2}{c}{$y_t^{(5y)}$} &  \multicolumn{2}{c}{$y_t^{(10y)}$} &  \multicolumn{2}{c}{$f_t^{(5y, 10y)}$} \\
      \cmidrule(lr{.25em}){2-3} \cmidrule(lr{.25em}){4-5} \cmidrule(lr{.25em}){6-7}
      & (1) & (2) & (3) & (4) & (5) & (6)  \\
      \midrule
      \input{../../tables/reg_pres.tex}
      \bottomrule
    \end{tabular}%
