for (i in 1:p)
    plot(cumsum(phi[ind,i])/ind, type="l", main=paste0("phi - ", i))
plot(cumsum(sigv2[ind])/ind, type="l", main = "sig_v^2")
plot(cumsum(sig2[ind])/ind, type="l", main = "sig^2")
plot(cumsum(sigeta2[ind])/ind, type="l", main = "sig_eta^2")






