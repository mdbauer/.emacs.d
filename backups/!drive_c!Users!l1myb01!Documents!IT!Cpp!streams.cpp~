#include <iostream>

using namespace std;

int main() {
  const int n = 3;
  string* s = new string[n];
  cout << "We'll read " << n << " inputs..." << endl;
  for (int i=0; i<n; i++) {
    cout << i << ": ";
    cin >> s[i];
  }
  for (int i=0; i<n; i++)
    cout << i << ": " << s[i] << endl;
  return 0;
}
