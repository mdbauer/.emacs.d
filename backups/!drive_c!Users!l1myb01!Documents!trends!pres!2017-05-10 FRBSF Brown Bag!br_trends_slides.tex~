\section{Introduction}

\begin{frame}
  \frametitle{Secular decline in long-term interest rates}
  \begin{figure}
    \vspace{-1.5pc}
    \centering
    \includegraphics[width=\textwidth]{../../figures/data1_pres.pdf}
  \end{figure}
\end{frame}
% motivation: some macro series that everyone is familiar with. trend
% in 10y yield -- seems to be explained first by pi* and later by r*. looks
% like trends play a role. this paper: what does finance theory and
% econometric analysis tell our about their role

\begin{frame}
  \frametitle{Trends: Macroeconomics vs.~Finance}
  \begin{block}{Macro}
    \begin{itemize}
    \item Stochastic trends mainstay of macroeconometrics
    \item Inflation trend component $\pi^\ast_t$ is crucial for forecasting
    \item Equilibrium/natural real interest rate $r^\ast_t$ is
      time-varying
    \item[$\Rightarrow$] Changes in steady state/long run values
    \end{itemize}\end{block}
  \vspace{-1pc}
  \begin{block}{Finance}
    \begin{itemize}
    \item Interest rates highly persistent, RW forecasts hard
      to beat
   \item But finance models assume stationary interest rates with
     slow mean reversion
    \end{itemize}
     \begin{quote}
      ``The level of nominal interest rates is
      surely a stationary variable in a fundamental sense: we have
      observations near 6\% as far back as ancient Babylon, and it is
      about 6\% again today.'' (Cochrane, 2005)
      \end{quote}
  \end{block}
\end{frame}
% trends play very different roles in macroeconomics and in
% finance. There appears to be a gap, and we are trying to bridge this gap.

\begin{frame}
  \frametitle{How do macroeconomic trends affect the yield curve?}
  \begin{wideitemize}
  \item Basic finance theory predicts one-for-one effects of
    $r^\ast_t$ and $\pi^\ast_t$
  \item High persistence and historical evolution of interest rates
    suggest important role for trends
  \item But (macro)-finance models generally assume constant
    $r^\ast$, $\pi^\ast$

    \begin{wideitemize}
    \item Some research that links $\pi^\ast_t$ to yield curve
    \item Essentially all finance ignores changes in $r^\ast_t$
    \end{wideitemize}
  \end{wideitemize}
\end{frame}
%% We want to see whether this is a good idea, or whether that is
%% missing something important

\begin{frame}
  \frametitle{This paper}
  \begin{block}{Question}
    What are the linkages between macro trends and the yield curve?
  \end{block}
  \begin{block}{What we do}
    \begin{itemize}
    \item Derive theoretical predictions of simple no-arbitrage model
    \item Test predictions using observable proxies for macro trends
    \item Empirically investigate the role of trends for yields
    \end{itemize}
    \vspace{-.5pc}
  \end{block}
  \begin{block}{What we find}
    \begin{itemize}
    \item Quantitatively important role for \emph{both} macro trends
    \item Yields revert to $i^\ast_t =
      r^\ast_t + \pi^\ast_t$, not to constant mean
    \item Substantial improvements over random ralk forecasts
    \item Accounting for trends fundamentally changes dynamics of
      estimated bond risk premia
      \end{itemize}
  \end{block}
\end{frame}

