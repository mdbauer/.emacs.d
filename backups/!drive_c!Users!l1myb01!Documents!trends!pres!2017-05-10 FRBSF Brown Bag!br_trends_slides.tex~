\subsection{2. Forecasting interest rates with $r^\ast_t$ and $\pi^\ast_t$}

\begin{frame}
  \frametitle{2. Forecasting interest rates with $r^\ast_t$ and $\pi^\ast_t$}
  \vspace{1pc}
  Model predicts mean-reversion of $y_t^{(n)}$ to shifting
  endpoint \[\underset{h
      \rightarrow \infty}{\lim} E_t y^{(n)}_{t+h} = \text{constant} +
    \pi^\ast_t + r^\ast_t\]
  \vspace{-.5pc}
  \begin{block}{Compare three forecasts out-of-sample}
    \begin{enumerate}
    \item Random walk \[\hat{y}^{(n)}_{t+h} = y_t^{(n)}\]
    \item $i^\ast_t=\pi^\ast_t + r^\ast_t$ is shifting endpoint
      \[\hat{y}^{(n)}_{t+h} = \hat{\rho}_t^h y_t^{(n)} +
        (1-\hat{\rho}_t^h) i^\ast_t\]
    \item $\pi^\ast_t$ (plus constant) is shifting endpoint \[\hat{y}^{(n)}_{t+h} = \tilde{\rho}_t^h y_t^{(n)} +
        (1-\tilde{\rho}_t^h) (\pi^\ast_t + \hat{\mu}_t)\]
    \end{enumerate}
    Rolling estimation (expanding window) of $\hat{\rho}$,
    $\tilde{\rho}$, $\hat{\mu}$
  \end{block}
\end{frame}

\begin{frame}
  \frametitle{OOS forecasting for 10-year yield}
  \begin{table}
    \centering
    \begin{tabular}{lccccc}
      \toprule
      Horizon $h$ (quarters): & 4 & 10 & 20 & 30 & 40 \\
